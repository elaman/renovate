{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    ":prHourlyLimitNone"
  ],
  "includePaths": [
    "drupal/composer.@(json|lock)",
    "wordpress/composer.@(json|lock)"
  ],
  "branchPrefix": "renovate-",
  "packageRules": [
    {
      "groupName": "lock",
      "commitMessageAction": "[Renovate] Weekly lock file maintenance",
      "matchUpdateTypes": ["lockFileMaintenance"],
      "schedule": ["at any time"],
      "automerge": true
    },
    {
      "groupName": "major",
      "commitMessageAction": "[Renovate] Quarterly major version updates",
      "matchUpdateTypes": ["major"],
      "schedule": ["every 3 months on the first day of the month"]
    },
    {
      "commitMessageAction": "[Renovate] Disabled minor version updates (in favor of lock file maintenance)",
      "matchUpdateTypes": ["minor", "patch"],
      "enabled": false
    }
  ]
}