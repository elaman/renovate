{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    ":disableRateLimiting"
  ],
  "includePaths": [
    "drupal/composer.@(json|lock)",
    "wordpress/composer.@(json|lock)"
  ],
  "branchPrefix": "renovate-",
  "commitMessagePrefix": "[Renovate]",
  "packageRules": [
    {
      "description": "Group all minor, patch, and lock file maintenance into one weekly PR",
      "matchUpdateTypes": ["minor", "patch", "lockFileMaintenance"],
      "groupName": "Weekly Lock File Maintenance",
      "schedule": ["before 4am on monday"],
      "automerge": true
    },
    {
      "commitMessageAction": "Quaterly software updates updates",
      "schedule": ["at any time"],
      "matchUpdateTypes": ["major"],
      "groupName": "php"
    }
  ]
}
