{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly"
  ],
  "includePaths": [
    "drupal/composer.@(json|lock)",
    "wordpress/composer.@(json|lock)"
  ],
  "lockFileMaintenance": {
    "branchTopic": "renovate-lock",
    "schedule": ["at any time"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["major"],
      "branchTopic": "renovate-major-php",
      "schedule": ["every 3 months on the first day of the month"],
      "groupName": "major"
    }
  ]
}