{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    ":disableRateLimiting"
  ],
  "includePaths": [
    "drupal/composer.@(json|lock)",
    "wordpress/composer.@(json|lock)"
  ],
  "branchPrefix": "renovate-",
  "commitMessagePrefix": "[Renovate]",
  "packageRules": [
    {
      "commitMessageAction": "Weekly lock file maintanance",
      "schedule": ["at any time"],
      "matchUpdateTypes": ["lockFileMaintenance"],
      "groupName": "lock",
      "automerge": true
    },
    {
      "commitMessageAction": "Quaterly major version updates",
      "schedule": ["at any time"],
      "matchUpdateTypes": ["major"],
      "groupName": "php"
    }
  ]
}
