{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    ":disableRateLimiting"
  ],
  "includePaths": [
    "drupal/composer.@(json|lock)",
    "wordpress/composer.@(json|lock)"
  ],
  "rangeStrategy": "replace",
  "branchPrefix": "renovate-",
  "commitMessagePrefix": "[Renovate]",
  "packageRules": [
    {
      "commitMessageAction": "Weekly lock file maintenance",
      "matchUpdateTypes": ["lockFileMaintenance"],
      "groupName": "lock",
      "schedule": ["at any time"],
      "automerge": true
    },
    {
      "commitMessageAction": "Quaterly software updates",
      "schedule": ["at any time"],
      "matchUpdateTypes": ["major"],
      "groupName": "php"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "enabled": false
    }
  ]
}
