{
  "packageRules": [
    {
      "groupName": "skip traditional patch/minor updates in favor of lock file updates",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": ["patch", "minor"],
      "enabled": false
    },
    {
      "groupName": "Quarterly major PHP updates",
      "groupSlug": "php",
      "automerge": false,
      "matchPaths": [
        "drupal/**",
        "wordpress/**"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchManagers": ["composer"],
      "schedule": [
        "every 3 months on the first day of the month"
      ]
    }
  ],
  "commitMessageAction": "[Renovate]",
  "rangeStrategy": "update-lockfile",
  "branchPrefix": "renovate",
  "additionalBranchPrefix": "-",
  "branchTopic": "updates",
  "automerge": true,
  "automergeType": "pr",
  "ignoreTests": false,
  "ignorePaths": [
    "drupal/web/",
    "wordpress/web/",
    ".circleci/",
    ".docker/"
  ],
  "rebaseWhen": "behind-base-branch",
  "updateNotScheduled": false,
  "lockFileMaintenance": {
    "enabled": true,
    "commitMessageAction": "[Renovate] lock file updates",
    "groupName": "lock",
    "schedule": [
      "after 5am and before 8am on thursday"
    ]
  },
  "transitiveRemediation": true,
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
